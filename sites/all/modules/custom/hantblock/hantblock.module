function hantblock_permission() {
  return array(
      'access arguments for hantblock page' => array(
          'title' => t('Permission for HantBlock module'), 
          'description' => t('Description of hantblock module permission.') ) );
}

function hantblock_menu() {
  $items ['mypage'] = array(
      'title' => 'HaNTBlock Page Title', 
      'page callback' => 'hantblock_page_function', 
      'access arguments' => array(
          'access arguments for hantblock page' ), 
      'type' => MENU_NORMAL_ITEM );
  
  return $items;
}

function hantblock_page_function($var1 = "hihi", $var2 = "hihi2") {
  if ($var2 == "hihi3")
    return "HIHIHI333333333333333333";
  if ($var1 == "hihi")
    return "HIHIHI";
  else
    return "HAHAHA";
}

