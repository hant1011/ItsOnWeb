function hantblock_block_info() {
  $blocks ['hantblock'] = array(
      'info' => t('HantBlock Block (Structure > Blocks)') );
  
  return $blocks;
}

function hantblock_block_view($delta = '') {
  
  $block = array();
  
  switch ($delta) {
    case 'hantblock' :
      $block ['subject'] = t('HaNTBlock subject');
      $block ['content'] = "Here is HantBlock content";
      break;
  }
  return $block;
}